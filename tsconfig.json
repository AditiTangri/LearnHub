{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["jest"], // Add Jest types
    "esModuleInterop": true, // Needed for Jest
    "jsx": "react-jsx" // For React component testing
  },
  "include": ["src/**/*", "__tests__/**/*"], // Include test files
  "exclude": [".docusaurus", "build", "node_modules"]
}